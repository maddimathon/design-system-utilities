{
    "extends": "@maddimathon/build-utilities/tsconfig",
    "include": [
        "../.scripts/**/*",
        ".scripts/**/*"
    ],
    "exclude": [
        "src/**"
    ],
    "compilerOptions": {
        "allowImportingTsExtensions": false,
        "baseUrl": "../",
        "checkJs": false,
        "declaration": false,
        "declarationMap": false,
        "exactOptionalPropertyTypes": false,
        "noEmit": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "target": "ESNext",
        "verbatimModuleSyntax": false
    }
}