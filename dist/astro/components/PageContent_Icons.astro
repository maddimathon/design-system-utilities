export interface Props {
    tokens: Tokens.JsonReturn;
}

const { tokens }: Props = Astro.props;

/* CONSTANTS ===================================== */
---

<h2>All Icons</h2>

<div class='container body-subgrid | tokens-demo-all-icons'>
    {Object.values(tokens.icons).map((icon) => <Icon icon={icon} />)}
</div>

<Alert
    heading={2}
    icon={tokens.icons.star}
>
    <span
        slot='headline'
        set:text='All Alert Blocks'
    />
</Alert>
{
    Object.values(tokens.icons).map((icon) => (
        <Alert icon={icon}>
            <span
                slot='headline'
                set:text={icon.slug}
            />
            <p set:text={`label: ${icon.label}`} />
        </Alert>
    ))
}

