    title='Colour Tokens'
    layout='extra-wide'
>
    <ColourTable
        id='all-colours'
        colour={DefaultTokens.colour}
    />

    {
        (Object.keys(DefaultTokens.colour) as (keyof typeof DefaultTokens.colour)[]).map(
            (name) => (
                <h2 set:html={name} />
                <ColourList
                    bases={DefaultTokens.colour.base}
                    colour={DefaultTokens.colour[name]}
                    id={`${name}-shade-list`}
                    name={name}
                    shadeHeading="3"
                />
            )
        )
    }
</DocsPage>

