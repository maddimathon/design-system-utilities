{
    "extends": "@maddimathon/build-utilities/tsconfig",
    "include": [
        "../../src/ts/**/*",
        "./src/ts/**/*"
    ],
    "exclude": [
        "./.astro/**/*",
        "./.scripts/**/*",
        "./node_modules/**/*",
        "./02-tokens/**/*",
        "./src/ts/02-tokens/**/*"
    ],
    "compilerOptions": {
        "baseUrl": "../../",
        "exactOptionalPropertyTypes": false,
        "noUnusedParameters": false,
        "outDir": "../../dist/ts/",
        "skipLibCheck": true,
        "sourceMap": true
    }
}