export interface Props
    extends Omit<
        ComponentProps<typeof UtilsAlert>,
        'svg' | 'svgLabel' | 'type'
    > {
    icon: Tokens_Icons.SvgIcon.JsonReturn;
}

const { icon, class: classList = [], ...attributes }: Props = Astro.props;

/* CONSTANTS ===================================== */
---

<UtilsAlert
    class:list={{ 'alert-block--has-heading': attributes.heading }}
    slug={icon.slug}
    svg={icon.svg}
    svgLabel={icon.label}
    {...attributes}
>
    <slot
        slot='headline'
        name='headline'
    />
    <slot />
</UtilsAlert>
