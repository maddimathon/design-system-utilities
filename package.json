{
    "name": "@maddimathon/design-system-utilities",
    "version": "0.1.0-alpha",

    "author": "Maddi Mathon (www.maddimathon.com)",
    "description": "Utilities to use while building brand kits or design systems.  Developed for use with @maddimathon/boilerplate-brand-kit.",
    
    "keywords": [],

    "homepage": "https://maddimathon.github.io/design-system-utilities",
    "license": "MIT",

    "repository": {
        "type": "git",
        "url": "https://github.com/maddimathon/design-system-utilities.git"
    },
    
    "engines": {
        "node": ">=22"
    },

    "type": "module",

    "files": [
        "./dist/**/*",
        "!./dist/default-tokens.json",
        "!./dist/css/templates/@template.css",
        "!./dist/css/templates/@template.css.map",
        "./LICENSE.md",
        "./package-lock.json",
        "./package.json",
        "./README.md"
    ],

    "main": "./dist/ts/index.js",
    "types": "./dist/ts/index.d.ts",

    "bugs": {
        "url": "https://github.com/maddimathon/design-system-utilities/issues"
    },

    "exports": {

        ".": {
            "astro": "./dist/ts/index.js",
            "sass": "./dist/scss/index.scss",
            "types": "./dist/ts/index.d.ts",
            "default": "./dist/ts/index.js"
        },
        

        "./jest.config.js": "./jest.config.js",
        "./package.json": "./package.json",
        "./tsconfig": "./tsconfig.json",

        
        "./components/*": "./dist/astro/components/*.astro",

        "./css/*.scss": {
            "sass": "./dist/astro/scss/*.scss",
            "default": "./dist/astro/css/*.css"
        },
        "./css/*": {
            "sass": "./dist/astro/scss/*.scss",
            "default": [
                "./dist/astro/css/*.css",
                "./dist/astro/css/*",
                "./dist/astro/scss/*"
            ]
        },

        "./layouts/*": "./dist/astro/layouts/*.astro",
        "./support/*": "./dist/astro/support/*.astro",

        "./astro/functions": "./dist/astro/functions/index.ts",

        "./astro/*": [
            "./dist/astro/*.astro",
            "./dist/astro/*.js",
            "./dist/astro/*/index.js",
            "./dist/astro/*"
        ],


        "./config.scss": "./dist/scss/config/index.scss",
        "./config/*.scss": [
            "./dist/scss/config/*.scss",
            "./dist/scss/config/_*.scss",
            "./dist/scss/config/*/index.scss",
            "./dist/scss/config/*/_index.scss"
        ],
        
        "./notice.scss": "./dist/scss/_notice.scss",
        
        "./templates/*.scss": [
            "./dist/scss/templates/*.scss",
            "./dist/scss/templates/*/index.scss",
            "./dist/scss/templates/*/_index.scss"
        ],

        "./tokens.scss": "./dist/scss/tokens/index.scss",
        "./tokens/*.scss": [
            "./dist/scss/tokens/*.scss",
            "./dist/scss/tokens/_*.scss",
            "./dist/scss/tokens/*/index.scss",
            "./dist/scss/tokens/*/_index.scss"
        ],

        "./*.scss": [
            "./dist/scss/templates/*/index.scss",
            "./dist/scss/templates/*/_index.scss",
            "./dist/scss/lib/*",
            "./dist/scss/lib/_*",
            "./dist/scss/lib/*/index.scss",
            "./dist/scss/lib/*/_index.scss"
        ],

        "./*": {

            "sass": [
                "./dist/scss/templates/*/index.scss",
                "./dist/scss/templates/*/_index.scss",
                "./dist/scss/lib/*",
                "./dist/scss/lib/_*",
                "./dist/scss/lib/*/index.scss",
                "./dist/scss/lib/*/_index.scss"
            ],

            "types": [
                "./dist/ts/*.d.ts",
                "./dist/ts/*/index.d.ts",
                "./dist/ts/*"
            ],

            "default": [
                "./dist/ts/*.js",
                "./dist/ts/*/index.js",
                "./dist/ts/*"
            ]
        }
    },

    "scripts": {
        "commit": "sh .scripts/commit.sh",

        "astro:check": "astro check",
        "astro:build": "astro check && astro build",
        "astro:preview": "astro preview",
        "astro:start": "astro check && astro dev",

        "preview": "astro preview",

        "snap":     "build-utils snapshot",
        "snapshot": "build-utils snapshot",

        "compile": "build-utils compile",

        "test": "build-utils test",

        "doc":      "build-utils document",
        "document": "build-utils document",

        "build":       "build-utils build",
        "quick-build": "build-utils build --without minimize,prettify",
        
        
        "prewatch": "build-utils compile --starting",
        
        "watch": "run-p --silent watch:*",
            "watch:css":      "watch -p 'src/scss/**/*'     -c 'npm run --silent quick-build -- --only-compile scss     --watchedWatcher \"watch:scss\"      --watchedChange --watchedFilename \"$FILENAME\" --watchedEvent \"$EVENT\"'",
            "watch:js":       "watch -p 'src/ts/**/*'       -c 'npm run --silent quick-build -- --only-compile ts       --watchedWatcher \"watch:js\"        --watchedChange --watchedFilename \"$FILENAME\" --watchedEvent \"$EVENT\"'",
            "watch:docs":     "watch -p 'src/docs/**/*'     -c 'build-utils document                                    --watchedWatcher \"watch:docs\"      --watchedChange --watchedFilename \"$FILENAME\" --watchedEvent \"$EVENT\"'",
        
        
        "build-start": "build-utils build --without minimize,prettify --without-document astro && npm run --silent start",
        "build-update": "npm run --silent build -- --watchedWatcher \"watch:cx\" --watchedChange --only compile,document --without-compile astro,templates,files --only-document scss --verbose",

        "start": "run-p start:* start:watch:*",
            "start:watch:scss": "watch -p 'src/scss/**/*' -p 'src/docs/scss/**/*' -c 'build-utils build --only compile,document      --only-compile scss      --only-document scss --watchedWatcher \"start:watch:scss\" --watchedChange --watchedFilename \"$FILENAME\" --watchedEvent \"$EVENT\"'",
            "start:watch:ts":   "watch -p 'src/ts/**/*'                           -c 'build-utils build --only compile,test,document --only-compile ts,tokens --only-document scss --watchedWatcher \"start:watch:ts\"   --watchedChange --watchedFilename \"$FILENAME\" --watchedEvent \"$EVENT\"'",
            "start:astro": "astro dev",
        

        "package": "build-utils package",
        "dryrun": "build-utils release --dryrun --without-package snapshot,zip",

        "release": "build-utils release"
    },
    
    "dependencies": {
        "@maddimathon/build-utilities": "0.3.0-alpha",
        "@maddimathon/utility-astro": "file:../utility-astro",
        "@maddimathon/utility-sass": "file:../utility-sass",
        "@maddimathon/utility-typescript": "2.0.0-beta",
        "@types/jest": "^30.0.0",
        "astro": "^5.13.11",
        "color-convert": "^3.1.2",
        "minimist": "^1.2.8",
        "typedoc": "^0.28.13",
        "wcag-contrast": "^3.0.0",
        "yaml": "^2.8.1",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@astrojs/check": "0.9.4",
        "@types/minimist": "1.2.5",
        "@types/node": "22.18.0",
        "@types/wcag-contrast": "3.0.3",
        "jest": "30.1.3",
        "npm-run-all": "4.1.5",
        "sass": "1.93.2",
        "tsx": "4.20.5",
        "typedoc-plugin-inline-sources": "1.3.0",
        "typescript": "5.9.2",
        "watch-cli": "0.2.3"
    },

    "peerDependencies": {
        "@maddimathon/build-utilities": "~0.3.0-alpha",
        "@maddimathon/utility-typescript": "^2.0.0-beta",
        "astro": "^5.13.11",
        "typedoc": "^0.28.13",
        "zod": "^3.25.76"
    },
    "peerDependenciesMeta": {
        "@maddimathon/build-utilities": {
            "optional": true
        },

        "astro": {
            "optional": true
        },

        "typedoc": {
            "optional": true
        },

        "zod": {
            "optional": true
        }
    },

    "browserslist": [
        "last 3 major versions",
        "> 0.5%",
        "not dead"
    ]
}